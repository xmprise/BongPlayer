<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/logTitle" android:text="@string/logTitle"
         android:editable="false">
        
    </TextView>
    <ListView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:layout_weight="1"
    android:id="@+id/logView">
    </ListView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        
        <Button android:id="@+id/button_on"
            android:layout_height="wrap_content"
            android:text="@string/button_on" android:layout_width="fill_parent" android:hapticFeedbackEnabled="true"/>
    </LinearLayout>

</LinearLayout>